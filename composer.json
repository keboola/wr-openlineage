{
    "name": "keboola/wr-openlineage",
    "description": "Writes jobs data into a service with OpenLineage API",
    "license": "MIT",
    "require": {
        "php": "^8.1",
        "keboola/php-component": "^9.0",
        "keboola/storage-api-client": "^12.10"
    },
    "require-dev": {
        "php-parallel-lint/php-parallel-lint": "^1.3",
        "keboola/coding-standard": ">=7.0.2",
        "keboola/php-temp": "^2.0",
        "phpstan/phpstan": "^1.4",
        "phpunit/phpunit": "^9.5",
        "symfony/process": "^5.0"
    },
    "autoload": {
        "psr-4": {
            "Keboola\\OpenLineageWriter\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Keboola\\OpenLineageWriter\\\\Tests\\": "tests/phpunit/"
        }
    },
    "scripts": {
        "wait-for-marquez": "./docker/wait-for-it.sh -t 60 marquez-api:6000 -- echo \"Marquez is up\"",
        "tests-phpunit": "phpunit",
        "tests": [
            "@wait-for-marquez",
            "@tests-phpunit"
        ],

        "phpstan": "phpstan analyse ./src ./tests --level=max --no-progress -c phpstan.neon",
        "phpcs": "phpcs -n --ignore=vendor --extensions=php .",
        "phpcbf": "phpcbf -n --ignore=vendor --extensions=php .",
        "phplint": "parallel-lint -j 10 --exclude vendor .",
        "build": [
            "@phplint",
            "@phpcs",
            "@phpstan",
            "@tests"
        ],
        "ci": [
            "@composer validate --no-check-publish --no-check-all",
            "@build"
        ]
    },
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true,
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
